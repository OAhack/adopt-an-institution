%h2
  = t("titles.adopt", :thing => @thing.name)
= form_for :thing, :url => things_path, :method => :put, :html => {:id => "adoption_form"} do |f|
  = f.hidden_field "id"
  = f.hidden_field "user_id", :value => current_user.id
  %fieldset.control-group
    = label_tag "relationship_type", t("Your Relationship to #{@thing.name}"), :id => "relationship_type_label"
    = select_tag "relationship_type",'<option value="faculty" selected="selected">Faculty</option><option value="student">Student</option><option value="administrator">Administrator</option><option value="librarian">Librarian</option><option value="other">Other</option>'.html_safe 
  
  %fieldset.control-group
    = f.label "name", 'Department/Subject', :id => "relationship_label"
    = f.text_field "relationship", :value => ''
  %fieldset.control-group
    = f.submit t("buttons.adopt"), :class => "btn primary"
